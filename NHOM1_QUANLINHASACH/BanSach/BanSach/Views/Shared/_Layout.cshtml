    <!-- Topbar Start -->
    <div class="row align-items-center py-3 px-xl-5" id="topbar" style="background-color: #1f1f20;">
        <div class="col-lg-3 d-none d-lg-block">
            <a href="~/SanPhams/TrangChu" class="text-decoration-none">
                <h2 class="m-0 display-5 font-weight-semi-bold" style="color: white;">
                    <img src="~/Content/img/logosach.png" style="width:40px;">
                    Võ Duy Ân
                </h2>
            </a>
        </div>
        <div class="col-lg-6 col-6 text-right">
            @using (Html.BeginForm("ProductList", "SanPhams", FormMethod.Get))
            {
                <div class="input-group" style="margin-left:10px;">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="border-radius:10px 0 0 10px;">
                            <i class="fas fa-search"></i>
                        </span>
                    </div>
                    <input type="text" class="form-control" placeholder="Nhập tên sách bạn muốn tìm" name="SearchString" style="border-radius:0 10px 10px 0;">
                </div>
            }
        </div>
        <div class="col-lg-3 col-6 text-right">
            <div class="text-white" id="current-time" style="font-size: 1rem; margin-bottom: 10px;">
                @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")
            </div>
            <a href="~/ShoppingCart/ShowCart" class="btn border" style="border-radius:10px;">
                <i class="fas fa-shopping-cart" style="color:white;">Giỏ hàng</i>
                @Html.Action("BagCart", "ShoppingCart")
            </a>
        </div>
    </div>
    <!-- Topbar End -->
    <!-- Navbar Start -->
    <div class="container-fluid" id="navbar" style="background-color:#1f1f20;">
        <div class="row border-top px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a class="btn shadow-none d-flex align-items-center justify-content-between text-white w-50" data-toggle="collapse" href="#navbar-vertical" style="height: 65px; padding: 0 20px; border-radius:10px; background-color:white;">
                    <h6 class="m-0">Danh mục</h6>
                    <i class="fa fa-angle-down text-dark"></i>
                </a>
                <nav class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 border border-top-0 bg-light" id="navbar-vertical" style="min-width: 50px; border-bottom-left-radius: 15px; border-bottom-right-radius: 15px;">
                    @Html.Action("PhanDanhMuc", "DanhMucs")
                </nav>
            </div>
            <div class="col-lg-9">
                <nav class="navbar navbar-expand-lg navbar-light py-3 py-lg-0 px-0">
                    <a href="~/SanPhams/ProductList" class="text-decoration-none d-block d-lg-none">
                        <img src="~/Content/img/logosach.png" style="width:40px; height: 40px; margin-right: 10px;">
                        <h1 class="m-0 display-5 font-weight-semi-bold text-white">Võ Duy Ân</h1>
                    </a>
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse" style="background-color:#1f1f20;">
                        <div class="navbar-nav ml-auto py-0" id="user">
                            @if (Session["IDkh"] != null)
                            {
                                <div class="dropdown">
                                    <a href="#" class="nav-item nav-link text-white">@Session["TenKH"]</a>
                                    <div class="dropdown-content">
                                        <a href="@Url.Action("InfoCustomer", "LoginUser")">Thông tin cá nhân</a>
                                      
                                        <a href="~/KhachHangs/LichSuDonHang">Lịch sử đơn hàng</a>
                                        <a href="@Url.Action("Logout", "LoginUser")">Đăng xuất</a>
                                    </div>
                                </div>
                            }
                            else if (Session["IdQly"] != null)
                            {
                                <a href="@Url.Action("QuanTri", "LoginUser")" class="nav-item nav-link">Trang ADMIN</a>
                                <a href="@Url.Action("Logout", "LoginUser")" class="nav-item nav-link">Đăng xuất</a>
                            }
                            else
                            {
                                <a href="~/LoginUser/LoginAccountCus" class="nav-item nav-link">Đăng nhập</a>
                                <a href="~/LoginUser/RegisterCus" class="nav-item nav-link">Đăng ký</a>
                            }
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <!-- Navbar End -->
    <!-- Main Start -->
    <div class="container-fluid pt-4" style="width: 100%; background-color: black;">
        <div class="container-fluid" style="background-color: #1f1f20; border-radius: 15px; padding: 10px; margin: 0 7%; width: 86%; height: 100%;">
            @RenderBody()
        </div>
    </div>
    <!-- Main End -->
    <!-- Footer Start -->
