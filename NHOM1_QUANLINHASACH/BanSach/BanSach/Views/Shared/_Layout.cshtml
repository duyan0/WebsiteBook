    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    @RenderSection("scripts", required: false)

    <!-- Custom CSS -->
    <style>

        body {
            font-family: 'Poppins', Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa; /* Màu nền để dễ nhìn */
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: 'Poppins', Arial, sans-serif;
        }


        .dropdown {
            position: relative;
            display: inline-block;
            border-radius: 1rem;
            font-weight: bold;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            z-index: 2;
            border-radius: 1rem;
        }

            .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                .dropdown-content a:hover {
                    background-color: #252222;
                    border-radius: 1rem;
                    color: white;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .navbar-light .navbar-nav .nav-link {
            padding: 20px 10px;
            outline: none;
            color: white;
            border-radius: 5px;
        }

            .navbar-light .navbar-nav .nav-link:hover,
            .navbar-light .navbar-nav .nav-link.active {
                color: white;
                background-color: #313030;
            }

        #loading {
            position: fixed; /* Đặt vị trí cố định */
            width: 100%; /* Chiếm toàn bộ chiều rộng */
            height: 100%; /* Chiếm toàn bộ chiều cao */
            top: 0; /* Vị trí trên cùng */
            left: 0; /* Vị trí bên trái */
            background: rgba(255, 255, 255, 0.8); /* Nền trắng trong suốt */
            z-index: 9999; /* Đảm bảo hiển thị trên các phần tử khác */
            display: flex; /* Sử dụng flexbox */
            align-items: center; /* Căn giữa theo chiều dọc */
            justify-content: center; /* Căn giữa theo chiều ngang */
        }

        .spinner {
            width: 50px; /* Đường kính vòng tròn */
            height: 50px; /* Đường kính vòng tròn */
            border: 6px solid rgba(255, 0, 0, 0.5); /* Màu nền cho vòng tròn với độ trong suốt */
            border-top: 6px solid red; /* Màu cho phần trên */
            border-radius: 50%; /* Bo góc thành hình tròn */
            animation: spin 1s linear infinite; /* Áp dụng hiệu ứng quay */
        }

        .zalo-contact {
            position: fixed;
            bottom: 20px;
            right: 20px;
            width: 50px;
            height: 50px;
            z-index: 1000;
            border-radius: 60%;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease;
        }

            .zalo-contact img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .zalo-contact:hover {
                transform: scale(1.1); /* Tăng kích thước khi hover */
            }
            .fs-6{
                font-size:15px;
            }
    </style>
    <!-- FT nè -->
    <!-- Custom JavaScript -->
    <script>

        window.addEventListener("load", function () {
            const loadingElement = document.getElementById("loading");
            loadingElement.style.display = "none";
        });

        function updateCurrentTime() {
            const now = new Date();
            const formattedTime = now.toLocaleString('vi-VN', {
                day: '2-digit',
                month: '2-digit',
                year: 'numeric',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit'
            });
        }

        // Cập nhật thời gian mỗi giây
        setInterval(updateCurrentTime, 1000);

        // Cập nhật khi trang được tải lần đầu
        window.addEventListener("load", updateCurrentTime);
    </script>
</body>

