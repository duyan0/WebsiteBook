        <div class="row align-items-center py-3 px-xl-5">
            <!-- Logo -->
            <div class="col-lg-3 col-12 text-lg-left text-center mb-3 mb-lg-0">
                <a href="~/SanPhams/TrangChu" class="text-decoration-none">
