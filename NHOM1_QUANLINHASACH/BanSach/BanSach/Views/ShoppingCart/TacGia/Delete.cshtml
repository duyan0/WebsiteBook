@model BanSach.Models.TacGia

@{
    ViewBag.Title = "Xác nhận xóa Tác Giả " + Model.TenTacGia; // Cập nhật tiêu đề
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center">Xóa Tác Giả</h2> <!-- Tiêu đề chính -->

<div class="container">
    <div class="card" style="border-radius: 15px;">
        <!-- Bo góc cho card -->
        <div class="card-header font-weight-bold text-center">
            Thông tin Tác Giả
        </div>
        <div class="card-body">
            <table class="table table-bordered" style="border-radius: 10px; overflow: hidden;">
                <!-- Bo góc cho bảng -->
                <tbody>
                    <tr>
                        <th>
                            Tên Tác giả
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.TenTacGia)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Ngày sinh
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.NgaySinh)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Quốc gia
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.QuocGia)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Tiểu sử
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.TieuSu)
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions mt-3">
            <input type="submit" value="Xóa" class="btn btn-danger rounded" /> <!-- Nút xóa với màu đỏ và bo góc -->
            @Html.ActionLink("Trở về danh sách", "Index", null, new { @class = "btn btn-secondary ml-2 rounded" }) <!-- Nút trở về với bo góc -->
        </div>

    }
</div>

<style>
    .table-bordered {
        border: 2px solid black; /* Đặt màu viền cho bảng */
        border-radius: 10px; /* Bo góc cho bảng */
    }

        .table-bordered th, .table-bordered td {
            border: 1px solid black; /* Đặt màu viền cho các ô trong bảng */
        }

    .card {
        border-radius: 15px; /* Bo góc cho card */
    }

    /* Đảm bảo không có viền bên trong cho bảng với bo góc */
    .table th, .table td {
        border-radius: 0; /* Bo góc cho các ô không làm mất hình dạng của bảng */
    }
</style>
