@{
    ViewBag.Title = "Thống Kê Sản Phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="mb-4">Thống Kê Sản Phẩm</h2>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <h5 class="card-title">Tổng số sách hết hàng:</h5>
                            <button class="btn btn-danger w-100 text-dark" disabled>@ViewBag.TongSachHetHang</button> <!-- Button màu đỏ cho hết hàng -->
                        </div>
                        <div class="col-md-6 mb-3">
                            <h5 class="card-title">Tổng số sách còn hàng:</h5>
                            <button class="btn btn-success w-100" disabled>@ViewBag.TongSachConHang</button> <!-- Button màu xanh lá cho còn hàng -->
                        </div>
                        <div class="col-md-6 mb-3">
                            <h5 class="card-title">Tổng số lượng sách:</h5>
                            <button class="btn btn-primary w-100" disabled>@ViewBag.TongSoLuongSach</button> <!-- Button màu xanh dương cho số liệu trung lập -->
                        </div>
                        <div class="col-md-6 mb-3">
                            <h5 class="card-title">Tổng số đầu sách:</h5>
                            <button class="btn btn-primary w-100" disabled>@ViewBag.TongDauSach</button> <!-- Button màu xanh dương cho thông tin trung lập -->
                        </div>
                        <div class="col-md-6 mb-3">
                            <h5 class="card-title">Tổng giá trị tồn kho:</h5>
                            <button class="btn btn-info w-100" disabled>@ViewBag.TongGiaTriTonKho</button> <!-- Button màu xanh nhạt cho giá trị tiền -->
                        </div>
                        <div class="col-md-6 mb-3">
                            <h5 class="card-title">Tổng số sản phẩm có khuyến mãi:</h5>
                            <button class="btn btn-success w-100" disabled>@ViewBag.TongSanPhamKhuyenMai</button> <!-- Button màu xanh lá cho sản phẩm có khuyến mãi -->
                        </div>
                        <div class="col-md-6 mb-3">
                            <h5 class="card-title">Tổng số sản phẩm không có khuyến mãi:</h5>
                            <button class="btn btn-warning w-100" disabled>@ViewBag.TongSanPhamKhongKhuyenMai</button> <!-- Button màu vàng cho không có khuyến mãi -->
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-4">
                @Html.ActionLink("Quay về", "Index", null, new { @class = "btn btn-success btn-lg w-100" })
            </div>
        </div>
    </div>
</div>
