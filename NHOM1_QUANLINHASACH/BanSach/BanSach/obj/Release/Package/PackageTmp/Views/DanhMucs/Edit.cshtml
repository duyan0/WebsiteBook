@model BanSach.Models.DanhMuc

@{
    ViewBag.Title = "Chỉnh sửa danh mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-lg">
                <div class="card-header text-center text-white">
                    <h3 class="font-weight-bold mb-0">Chỉnh sửa thể loại - danh mục</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ID)

                        <div class="form-group row mb-4">
                            @Html.LabelFor(model => model.DanhMuc1, "Danh mục", htmlAttributes: new { @class = "col-md-3 col-form-label font-weight-bold" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.DanhMuc1, new { htmlAttributes = new { @class = "form-control border border-secondary rounded-lg", placeholder = "Nhập tên danh mục" } })
                                @Html.ValidationMessageFor(model => model.DanhMuc1, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row mb-4">
                            @Html.LabelFor(model => model.TheLoai, "Thể loại", htmlAttributes: new { @class = "col-md-3 col-form-label font-weight-bold" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.TheLoai, new { htmlAttributes = new { @class = "form-control border border-secondary rounded-lg", placeholder = "Nhập thể loại" } })
                                @Html.ValidationMessageFor(model => model.TheLoai, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-success  rounded-lg px-5">
                                <i class="fas fa-save mr-2"></i>Lưu
                            </button>
                            <div class="text-center mt-3">
                                @Html.ActionLink("Quay về ", "Index", null, new { @class = "btn btn-secondary  rounded-lg px-4" })
                            </div>
                        </div>
                    }
                    
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
