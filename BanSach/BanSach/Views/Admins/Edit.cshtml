@model BanSach.Models.Admin

@{
    ViewBag.Title = "Cập nhật tài khoản nhân sự";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center">Cập nhật tài khoản nhân sự</h2>

<div class="container mt-4">
    <div class="card shadow rounded">
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "Lỗi khi điền thông tin", new { @class = "alert alert-danger rounded" })
                    @Html.HiddenFor(model => model.ID)

                    <!-- Họ tên -->
                    <div class="form-group row">
                        <div class="col-sm-2 col-form-label">Họ tên</div>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control rounded outline-black", placeholder = "Nhập họ tên đầy đủ" } })
                            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <!-- Email -->
                    <div class="form-group row">
                        <div class="col-sm-2 col-form-label">Email</div>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control rounded outline-black", placeholder = "Nhập địa chỉ email" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Địa chỉ -->
                    <div class="form-group row">
                        <div class="col-sm-2 col-form-label">Địa chỉ</div>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control rounded outline-black", placeholder = "Nhập địa chỉ" } })
                            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Số điện thoại -->
                    <div class="form-group row">
                        <div class="col-sm-2 col-form-label">Số điện thoại</div>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.SoDT, new { htmlAttributes = new { @class = "form-control rounded outline-black", placeholder = "Nhập số điện thoại" } })
                            @Html.ValidationMessageFor(model => model.SoDT, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Vai trò -->
                    <div class="form-group row">
                        <div class="col-sm-2 col-form-label">Vai trò</div>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.VaiTro, new { htmlAttributes = new { @class = "form-control rounded outline-black", placeholder = "Nhập vai trò" } })
                            @Html.ValidationMessageFor(model => model.VaiTro, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Tài khoản -->
                    <div class="form-group row">
                        <div class="col-sm-2 col-form-label">Tài khoản</div>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.TKhoan, new { htmlAttributes = new { @class = "form-control rounded outline-black", placeholder = "Nhập tên tài khoản" } })
                            @Html.ValidationMessageFor(model => model.TKhoan, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Mật khẩu -->
                    <div class="form-group row">
                        <div class="col-sm-2 col-form-label">Mật khẩu</div>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.MKhau, new { htmlAttributes = new { @class = "form-control rounded outline-black", placeholder = "Nhập mật khẩu" } })
                            @Html.ValidationMessageFor(model => model.MKhau, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group row">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-success rounded">Lưu</button>
                            @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary ml-2 rounded" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<style>
    /* Cấu hình cho các input field */
.form-control {
    border: 1px solid #ccc; /* Đặt border màu xám cho các input */
    padding: 10px; /* Thêm padding cho input */
    border-radius: 5px; /* Bo góc các input */
    outline: 1px solid black; /* Outline đen cho input */
}

.form-control:focus {
    outline: 2px solid black; /* Khi focus sẽ có viền đen */
}

/* Định dạng layout chia 2 cột */
.form-horizontal .form-group {
    display: flex;
    margin-bottom: 1.5rem;
}

.form-group .col-sm-2 {
    flex: 1; /* Cột nhãn (label) chiếm 1 phần */
    font-weight: bold;
}

.form-group .col-sm-10 {
    flex: 2; /* Cột input chiếm 2 phần */
}

/* Cải thiện giao diện của các button */
button, .btn {
    border-radius: 5px; /* Bo góc các nút */
}

/* Cải thiện lỗi validation */
.text-danger {
    font-size: 0.875rem;
    color: #dc3545; /* Màu đỏ cho thông báo lỗi */
}

/* Media Query để đảm bảo giao diện phản hồi tốt trên di động */


</style>