@model BanSach.Models.Admin

@{
    ViewBag.Title = "Cập nhật tài khoản nhân sự";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-2">
    <h2 class="text-center mb-4">Cập nhật tài khoản nhân sự</h2>

    <div class="card shadow-sm rounded-3">
        <div class="card-body p-4">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="row g-3">
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger rounded-3 col-12" })
                    @Html.HiddenFor(model => model.ID)

                    <!-- Họ tên -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Họ tên</label>
                        @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control rounded-3", placeholder = "Nhập họ tên đầy đủ" } })
                        @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger mt-1" })
                    </div>

                    <!-- Email -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Email</label>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control rounded-3", placeholder = "Nhập địa chỉ email" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger mt-1" })
                    </div>

                   

                    <!-- Số điện thoại -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Số điện thoại</label>
                        @Html.EditorFor(model => model.SoDT, new { htmlAttributes = new { @class = "form-control rounded-3", placeholder = "Nhập số điện thoại" } })
                        @Html.ValidationMessageFor(model => model.SoDT, "", new { @class = "text-danger mt-1" })
                    </div>

                    <!-- Vai trò -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Vai trò</label>
                        @Html.DropDownListFor(model => model.VaiTro, new SelectList(new[]
                        {
                            new { Value = "Nhân viên", Text = "Nhân viên" },
                            new { Value = "Admin", Text = "Admin" }
                        }, "Value", "Text"), "Chọn vai trò", new { @class = "form-select rounded-3" })
                        @Html.ValidationMessageFor(model => model.VaiTro, "", new { @class = "text-danger mt-1" })
                    </div>

                    <!-- Tài khoản -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Tài khoản</label>
                        @Html.EditorFor(model => model.TKhoan, new { htmlAttributes = new { @class = "form-control rounded-3", placeholder = "Nhập tên tài khoản" } })
                        @Html.ValidationMessageFor(model => model.TKhoan, "", new { @class = "text-danger mt-1" })
                    </div>

                    <!-- Mật khẩu -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Mật khẩu</label>
                        @Html.EditorFor(model => model.MKhau, new { htmlAttributes = new { @class = "form-control rounded-3", placeholder = "Nhập mật khẩu" } })
                        @Html.ValidationMessageFor(model => model.MKhau, "", new { @class = "text-danger mt-1" })
                    </div>

                    <!-- Buttons -->
                    <div class="col-md-12 mt-4">
                        <button type="submit" class="btn btn-success rounded-3 px-4">Lưu</button>
                        @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary rounded-3 px-4 ms-2" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}