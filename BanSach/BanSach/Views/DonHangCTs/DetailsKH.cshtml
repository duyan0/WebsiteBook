@model BanSach.Models.DonHang

@{
    ViewBag.Title = "Chi Tiết Đơn Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />


<div class="container my-5 bg-dark text-light rounded p-4">
    <h2 class="text-light"><i class="fas fa-shopping-bag"></i> Chi Tiết Đơn Hàng #@Model.IDdh</h2>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Thông tin đơn hàng -->
    <div class="card bg-secondary text-light mb-4 border-0">
        <div class="card-body">
            <p><strong>Ngày đặt:</strong> @(Model.NgayDatHang?.ToString("dd/MM/yyyy") ?? "Chưa xác định")</p>
            <p>
                <strong>Tổng tiền:</strong>
                @{
                    var totalAmount = Model.DonHangCT?.Sum(ct => ct.SoLuong * ct.Gia) ?? 0;
                }
                @totalAmount.ToString("N0") VNĐ
            </p>
            <p><strong>Trạng thái:</strong> @(Model.TrangThai ?? "Chưa xác định")</p>
        </div>
    </div>

    <!-- Danh sách sản phẩm -->
    <h4 class="text-light">Sản Phẩm</h4>
    <div class="table-responsive">
        <table class="table table-dark table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>Sản Phẩm</th>
                    <th>Số Lượng</th>
                    <th>Giá</th>
                    <th>Tổng</th>
                    <th>Đánh Giá</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.DonHangCT ?? Enumerable.Empty<BanSach.Models.DonHangCT>())
                {
                    var danhGia = Model.DanhGiaSanPham?.FirstOrDefault(d => d.IDsp == item.IDSanPham && d.IDDonHang == Model.IDdh);
                    <tr>
                        <td>@(item.SanPham?.TenSP ?? "Không xác định")</td>
                        <td>@item.SoLuong</td>
                        <td>@item.Gia.ToString("N0") VNĐ</td>
                        <td>@((item.SoLuong * item.Gia).ToString("N0")) VNĐ</td>
                        <td>
                            @if (danhGia == null)
                            {
                                <form method="post" action="@Url.Action("AddDanhGia", "DonHangCTs")" class="p-3 bg-secondary rounded">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="idDonHang" value="@Model.IDdh" />
                                    <input type="hidden" name="idSanPham" value="@item.IDSanPham" />
                                    <div class="form-group mb-3">
                                        <label class="text-light">Điểm đánh giá:</label>
                                        <select name="diemDanhGia" class="form-control bg-dark text-light border-secondary" required>
                                            <option value="" class="text-dark">Chọn điểm</option>
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <option value="@i">@i Sao</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="text-light">Nhận xét:</label>
                                        <textarea name="nhanXet" class="form-control bg-dark text-light border-secondary" rows="3" placeholder="Nhập nhận xét của bạn..."></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-sm w-100">
                                        Gửi Đánh Giá <i class="fas fa-star"></i>
                                    </button>
                                </form>
                            }
                            else
                            {
                                <div class="p-2">
                                    <p class="mb-1"><strong>@danhGia.DiemDanhGia Sao</strong>: @danhGia.NhanXet</p>
                                    @if (!string.IsNullOrEmpty(danhGia.PhanHoi))
                                    {
                                        <p class="mb-0"><strong>Phản hồi:</strong> @danhGia.PhanHoi</p>
                                    }
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a href="@Url.Action("LichSuDonHang", "KhachHangs")" class="btn btn-outline-light mt-3">
        Quay Lại <i class="fas fa-arrow-left"></i>
    </a>
</div>

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}