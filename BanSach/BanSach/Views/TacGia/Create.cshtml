@model BanSach.Models.TacGia

@{
    ViewBag.Title = "Thêm Tác Giả";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center mt-4">Thêm Tác Giả</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container mt-4">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <!-- Cột bên trái -->
            <div class="col-md-6">
                <div class="form-group row mb-4">
                    <label class="font-weight-bold col-md-4">Tên Tác Giả</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.TenTG, new { htmlAttributes = new { @class = "form-control rounded" } })
                        @Html.ValidationMessageFor(model => model.TenTG, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row mb-4">
                    <label class="font-weight-bold col-md-4">Ngày sinh</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control rounded", type = "date" } })
                        @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <!-- Cột bên phải -->
            <div class="col-md-6">
                <div class="form-group row mb-4">
                    <label class="font-weight-bold col-md-4">Quốc gia</label>
                    <div class="col-md-8">
                        @Html.DropDownListFor(model => model.QuocGia, (IEnumerable<SelectListItem>)ViewBag.QuocGia, "Chọn quốc gia", new { @class = "form-control rounded" })
                        @Html.ValidationMessageFor(model => model.QuocGia, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row mb-4">
                    <label class="font-weight-bold col-md-4">Tiểu sử</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.TieuSu, new { htmlAttributes = new { @class = "form-control rounded" } })
                        @Html.ValidationMessageFor(model => model.TieuSu, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <!-- Nút tạo mới và trở về -->
        <div class="form-group text-center mt-4">
            <input type="submit" value="Tạo Mới" class="btn btn-dark rounded px-4 me-2" /> <!-- Nút với nền đen và chữ trắng -->
            @Html.ActionLink("Trở về danh sách", "Index", null, new { @class = "btn btn-secondary rounded px-4" }) <!-- Nút với nền xám và chữ trắng -->
        </div>
    </div>
}
