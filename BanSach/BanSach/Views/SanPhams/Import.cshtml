@{
    ViewBag.Title = "Nhập sản phẩm từ Excel";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center font-weight-bold text-dark mb-4">Nhập sản phẩm từ Excel</h2>

<div class="container bg-light p-4 rounded shadow-sm" style="max-width: 800px;">
    <!-- Form cho phép tải lên file Excel -->
    @using (Html.BeginForm("Import", "SanPhams", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <!-- Form Group for File Input -->
        <div class="form-group row justify-content-center">
            <div class="col-md-6">
                <label for="file" class="font-weight-bold text-dark mb-2">Vui lòng chọn file excel</label>
                <input type="file" name="file" id="file" class="form-control" />
                @Html.ValidationMessage("file", "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Form Group for Submit Button -->
        <div class="form-group row justify-content-center mt-3 p-0">
            <div class="col-md-6 text-center ">
                <input type="submit" value="Tải lên" class="btn btn-outline-success mx-1" />
                @Html.ActionLink("Quay về danh sách sản phẩm", "Index", null, new { @class = "btn btn-secondary ml-2" })
            </div>
        </div>
    }

    

</div>
<div>
    <!-- Success Message -->
    @if (TempData["thanhcong"] != null)
    {
        <div class="alert alert-success text-center mt-4">
            @TempData["thanhcong"]
        </div>
    }
    else
    {
        <div class="alert alert-danger text-center mt-4">
            @TempData["thatbai"]
        </div>
    }
</div>