@model BanSach.Models.SanPham

@{
    ViewBag.Title = "Cập nhật - "+Model.TenSP;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2 class="text-center text-dark font-weight-bold">Cập nhật thông tin sản phẩm</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger error-message" })
        @Html.HiddenFor(model => model.IDsp)

        <div class="row">
            <!-- Cột bên trái -->
            <div class="col-md-6 col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.TenSP, "Tên Sách", new { @class = "control-label font-weight-bold text-dark" })
                    @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên sách" } })
                    @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "error-message" })
                </div>

                <div class="form-group mt-2">
                    @Html.LabelFor(model => model.MoTa, "Mô tả", new { @class = "control-label font-weight-bold text-dark" })
                    @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", placeholder = "Nhập mô tả sách" })
                    @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "error-message" })
                </div>


                <div class="form-group mt-2">
                    @Html.LabelFor(model => model.IDtl, "Thể loại", new { @class = "control-label font-weight-bold text-dark" })
                    @Html.DropDownListFor(model => model.IDtl, (SelectList)ViewBag.TL, "Chọn thể loại", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IDtl, "", new { @class = "error-message" })
                </div>

                <div class="form-group mt-2">
                    @Html.LabelFor(model => model.SoLuong, "Số lượng", new { @class = "control-label font-weight-bold text-dark" })
                    @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập số lượng", min = "0", max = "1000", type = "number" } })
                    @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "error-message" })
                </div>

                <div class="form-group mt-2">
                    @Html.LabelFor(model => model.HinhAnh, "Hình ảnh", new { @class = "control-label font-weight-bold text-dark" })
                    @Html.TextBoxFor(model => model.HinhAnh, null, new { type = "file", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "error-message" })
                </div>
            </div>

            <!-- Cột bên phải -->
            <div class="col-md-6">
                <div class="form-group mt-2">
                    @Html.LabelFor(model => model.GiaBan, "Giá tiền", new { @class = "control-label font-weight-bold text-dark" })
                    @Html.DropDownListFor(model => model.GiaBan, new SelectList(new[]
                    {
                        new { Value = "1000", Text = "1.000 VND" },
                        new { Value = "5000", Text = "5.000 VND" },
                        new { Value = "10000", Text = "10.000 VND" },
                        new { Value = "20000", Text = "20.000 VND" },
                        new { Value = "50000", Text = "50.000 VND" },
                        new { Value = "100000", Text = "100.000 VND" },
                        new { Value = "200000", Text = "200.000 VND" },
                        new { Value = "500000", Text = "500.000 VND" },
                        new { Value = "1000000", Text = "1.000.000 VND" }
                    }, "Value", "Text"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.GiaBan, "", new { @class = "error-message" })
                </div>

                <div class="form-group mt-2">
                    @Html.LabelFor(model => model.IDtg, "Tác Giả", new { @class = "control-label font-weight-bold text-dark" })
                    @Html.DropDownListFor(model => model.IDtg, (SelectList)ViewBag.TacGia, "Chọn tác giả", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IDtg, "", new { @class = "error-message" })
                </div>

                <div class="form-group mt-2">
                    @Html.LabelFor(model => model.IDnxb, "Nhà Xuất Bản", new { @class = "control-label font-weight-bold text-dark" })
                    @Html.DropDownList("IDnxb", (SelectList)ViewBag.NXB, "Chọn nhà xuất bản", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IDnxb, "", new { @class = "error-message" })
                </div>

                <div class="form-group mt-2">
                    @Html.LabelFor(model => model.IDkm, "Khuyến mãi", new { @class = "control-label font-weight-bold text-dark" })
                    @Html.DropDownListFor(model => model.IDkm, (SelectList)ViewBag.KM, "Chọn mức giảm giá", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IDkm, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mt-2">
                    @Html.LabelFor(model => model.TrangThaiSach, "Trạng thái sách", new { @class = "control-label font-weight-bold text-dark" })
                    @Html.DropDownListFor(model => model.TrangThaiSach, new SelectList(new List<SelectListItem>
                    {
                        new SelectListItem { Value = "Còn hàng", Text = "Còn hàng" }
                    }, "Value", "Text"), new { @class = "form-control btn btn-dark" })
                    @Html.ValidationMessageFor(model => model.TrangThaiSach, "", new { @class = "error-message" })
                </div>
            </div>
        </div>

        <div class="text-center ">
            <input type="submit"
                   value="Lưu"
                   class="btn btn-success mt-2 text-center " />
        </div>


    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
