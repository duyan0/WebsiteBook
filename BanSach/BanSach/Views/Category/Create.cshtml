@model BanSach.Models.TheLoai

@{
    ViewBag.Title = "Thêm Thể Loại";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Thêm Thể Loại Mới</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card shadow-sm">
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="mb-3">
                    <label for="TenTheLoai" class="form-label fw-bold">Tên thể loại</label>
                    @Html.EditorFor(model => model.TenTheLoai, new { htmlAttributes = new { @class = "form-control", @id = "TenTheLoai" } })
                    @Html.ValidationMessageFor(model => model.TenTheLoai, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Thêm mới</button>
                    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}