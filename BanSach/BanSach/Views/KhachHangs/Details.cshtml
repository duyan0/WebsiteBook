@model BanSach.Models.KhachHang

@{
    ViewBag.Title = "Thông tin cá nhân";
    Layout = "~/Views/Shared/_LayoutProfile.cshtml";
}

<div class="container mt-0 mb-5  py-3">
    <div class="card shadow-sm border-0 rounded-sm">
        <div class="card-header bg-success text-white text-center rounded-sm">
            <h4 class="mb-0 font-weight-bold text-white">Thông tin tài khoản</h4>
        </div>
        <div class="card-body">
            <!-- Họ và Tên -->
            <div class="mb-3 row">
                <label class="col-md-4 col-form-label font-weight-bold">
                    <i class="fas fa-user"></i> Tên:
                </label>
                <div class="col-md-8">
                    @Model.TenKH
                </div>
            </div>

            <!-- Số điện thoại -->
            <div class="mb-3 row">
                <label class="col-md-4 col-form-label font-weight-bold">
                    <i class="fas fa-phone-alt"></i> Số điện thoại:
                </label>
                <div class="col-md-8">
                    <p class="form-control-plaintext">@Model.SoDT</p> <!-- Hidden Phone Number -->
                </div>
            </div>

            <!-- Email -->
            <div class="mb-3 row">
                <label class="col-md-4 col-form-label font-weight-bold">
                    <i class="fas fa-envelope"></i> Email:
                </label>
                <div class="col-md-8">
                    <p class="form-control-plaintext">
                        *********.com
                    </p> <!-- Hidden Email -->
                </div>
            </div>

            <!-- Trạng thái tài khoản -->
            <div class="mb-3 row">
                <label class="col-md-4 col-form-label font-weight-bold">
                    <i class="fas fa-lock"></i> Trạng thái:
                </label>
                <div class="col-md-8">
                    <button class="alert alert-success py-1 px-1 mb-0">@Model.TrangThaiTaiKhoan</button>
                </div>
            </div>

            <!-- Tài khoản -->
            <div class="mb-3 row">
                <label class="col-md-4 col-form-label font-weight-bold">
                    <i class="fas fa-user-circle"></i> Tài khoản:
                </label>
                <div class="col-md-8">
                    <p class="form-control-plaintext">******</p> <!-- Hidden Account -->
                </div>
            </div>

            <!-- Mật khẩu -->
            <div class="mb-3 row">
                <label class="col-md-4 col-form-label font-weight-bold">
                    <i class="fas fa-key"></i> Mật khẩu:
                </label>
                <div class="col-md-8">
                    <p class="form-control-plaintext">******</p> <!-- Hidden Password -->
                </div>
            </div>

            @if (User.IsInRole("Admin"))
            {
                <div class="text-center mt-4">
                    @Html.ActionLink("Cập nhật", "Edit", new { id = Model.IDkh }, new { @class = "btn btn-success btn-lg px-5 rounded-sm shadow-sm mb-4" })
                </div>
            }

        </div>
    </div>
</div>

