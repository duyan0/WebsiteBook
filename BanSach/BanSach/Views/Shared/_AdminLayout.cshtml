<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <link href="~/Content/img/book/LOGO_book.png" rel="icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <!-- Google Web Fonts & Font Awesome -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link href="~/Content/css/duyan.css" rel="stylesheet" />
    <!-- Bootstrap JS (requires Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/changeimg.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="~/Admin/css/LayOutAdmin.css" rel="stylesheet" />
    @Styles.Render("~/Admin/css")
</head>
<body>
    <div class="sidebar ">
        <!-- Logo Section -->
        <div class="logo">
            <img src="https://cdn0.fahasa.com/skin/frontend/ma_vanese/fahasa/images/fahasa-logo.png" alt="Logo" class="logo-img">
            <span class="logo-text"></span>
        </div>
        <ul>
            <li>
                <a href="#">
                    <span class="icon"><i class="fas fa-home"></i></span>
                    <span class="title">Trang chủ</span>
                </a>
            </li>
            <!-- Menu Khách hàng -->
            <li>
                <a href="#" class="menu-toggle">
                    <span class="icon"><i class="fas fa-users"></i></span>
                    <span class="title">Khách hàng</span>
                    <span class="arrow"><i class="fas fa-chevron-down"></i></span>
                </a>
                <div class="submenu">
                    <a href="~/khachhangs/index" class="submenu-link">
                        <span class="icon"><i class="fas fa-user"></i></span>
                        <span class="title">Danh sách khách hàng</span>
                    </a>
                </div>
            </li>
            <!-- Menu Sản phẩm -->
            <li>
                <a href="#" class="menu-toggle">
                    <span class="icon"><i class="fas fa-box"></i></span>
                    <span class="title">Sách</span>
                    <span class="arrow"><i class="fas fa-chevron-down"></i></span>
                </a>
                <div class="submenu">
                    <a href="~/sanphams/index" class="submenu-link">
                        <span class="icon"><i class="fas fa-list"></i></span>
                        <span class="title">Sản phẩm</span>
                    </a>
                    <a href="~/danhmucs/index" class="submenu-link">
                        <span class="icon"><i class="fas fa-plus"></i></span>
                        <span class="title">Danh mục</span>
                    </a>
                    <a href="#" class="submenu-link">
                        <span class="icon"><i class="fas fa-list"></i></span>
                        <span class="title">Tác giả</span>
                    </a>
                    <a href="#" class="submenu-link">
                        <span class="icon"><i class="fas fa-plus"></i></span>
                        <span class="title">Nhà xuất bản</span>
                    </a>
                    <a href="~/Category" class="submenu-link">
                        <span class="icon"><i class="fas fa-list"></i></span>
                        <span class="title">Thể loại</span>
                    </a>
                    <a href="#" class="submenu-link">
                        <span class="icon"><i class="fas fa-plus"></i></span>
                        <span class="title">Danh mục tổng</span>
                    </a>
                    <a href="~/khuyenmai/index" class="submenu-link">
                        <span class="icon"><i class="fas fa-plus"></i></span>
                        <span class="title">Khuyến mãi</span>
                    </a>
                </div>
            </li>
            <!-- Menu Khách hàng -->
            <li>
                <a href="#" class="menu-toggle">
                    <span class="icon"><i class="fas fa-users"></i></span>
                    <span class="title">Đơn hàng</span>
                    <span class="arrow"><i class="fas fa-chevron-down"></i></span>
                </a>
                <div class="submenu">
                    <a href="~/donhangs/index" class="submenu-link">
                        <span class="icon"><i class="fas fa-user"></i></span>
                        <span class="title">Danh sách đơn hàng</span>
                    </a>
                    <a href="~/Admins/QuanLyDanhGia" class="submenu-link">
                        <span class="icon"><i class="fas fa-user"></i></span>
                        <span class="title">Quản lý đánh giá</span>
                    </a>
                </div>
            </li>
            <!-- Menu Giao diện -->
            <li>
                <a href="#" class="menu-toggle">
                    <span class="icon"><i class="fas fa-users"></i></span>
                    <span class="title">Giao diện</span>
                    <span class="arrow"><i class="fas fa-chevron-down"></i></span>
                </a>
                <div class="submenu">
                    <a href="~/banner/index" class="submenu-link">
                        <span class="icon"><i class="fas fa-user"></i></span>
                        <span class="title">Banner</span>
                    </a>
                    <a href="~/slide/index"class="submenu-link">
                        <span class="icon"><i class="fas fa-user"></i></span>
                        <span class="title">Slide</span>
                    </a>
                </div>
            </li>
        </ul>
    </div>

    <div class="main">
        <div class="topbar">
            <div class="toggle"><i class="fas fa-bars"></i></div>
            <div class="user">
                @if (Session["IDkh"] != null)
                {
                    Response.Redirect(Url.Action("login", "LoginUser"));
                }
                else if (Session["IdQly"] != null)
                {
                    <a href="@Url.Action("Logout", "LoginUser")" class="btn btn-danger text-decoration-none rounded-2 p-2">Đăng xuất</a>
                }
                else
                {
                    Response.Redirect(Url.Action("login", "LoginUser"));
                }
            </div>
        </div>
        <div class="content">
            @RenderBody()
        </div>
    </div>
    <script src="~/Admin/js/LayOutAdmin.js"></script>
    @Scripts.Render("~/Admin/js")
    @RenderSection("Scripts", required: false)
</body>
</html>